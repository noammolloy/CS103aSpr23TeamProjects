<h1>Transactions for <%= user.username %></h1>


    <p> Here is your list of things to do! </p>
    <table>
        <tbody>
            <tr>
                <td>
                    <a  class="btn btn-primary"
                        href="/transactions/groupByCategory">group by category</a>
                </td>
                <td>
                    <a  class="btn btn-primary"
                        href="?sort=category">sort by category</a>
                </td>
                <td>
                    <a  class="btn btn-primary"
                        href="?sort=amount">sort by amount</a>
                </td>
                <td>
                    <a  class="btn btn-primary"
                        href="?sort=description">sort by description</a>
                </td>
                <td>
                    <a  class="btn btn-primary"
                        href="?sort=date">sort by date</a>
                </td>
            </tr>
        </tbody>
    </table>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>description</th>
                <th>amount</th>
                <th>category</th>
                <th>date</th>
                <th>delete</th>
                <th>edit</th>
            </tr>
        </thead>
        <tbody>
            <% items.map(item => {%>
                <tr>
                    <td> <%= item.description %> </td>
                    <td><%= item.amount %></td>
                    <td><%= item.category %></td>
                    <td><%= item.date %></td>
                    <td>
                        <a href="/transactions/remove/<%=item._id %>">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                    <td>
                        <a href="/transactions/edit/<%=item._id %>">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                    </td>
                </tr>
                
                <% }) %>

        </tbody>
    </table>
    <br>
    <h1>Add a New Transaction</h1>
    <form method="post" action="transactions">
        <input type="text" name="desc" placeholder="description">
        <br>
        <input type="number" name="amt" placeholder="amount">
        <br>
        <input type="text" name="cat" placeholder="category">
        <br>
        <input type="date" name="date">
        <br>
        <input type="submit" value="store">
    </form>